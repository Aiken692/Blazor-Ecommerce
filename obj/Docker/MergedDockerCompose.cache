services:
  blazorecommerce.server:
    build:
      context: D:\Personal_Projects\Blazor-Ecommerce
      dockerfile: src/Server/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_URLS: https://+:443;http://+:80
    image: blazorecommerceserver
    ports:
    - target: 80
    - target: 443
    volumes:
    - C:\Users\Walter\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\Walter\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
  db:
    environment:
      POSTGRES_DB: Blazor_Ecommerce
      POSTGRES_PASSWORD: postgres
      POSTGRES_USER: postgres
    image: postgres
    ports:
    - published: 5432
      target: 5432
    restart: always
version: '3.4'